@page "/cart"
@using MyMedia.RCL.Models
@using MyMedia.RCL.Services
@inject CartService CartService
@inject NavigationManager Navigation
@inject MyMediaService ApiService

<PageTitle>O Meu Carrinho</PageTitle>

<h1>Carrinho de Compras</h1>

@if (cartItems.Count == 0)
{
    <div class="alert alert-info mt-4">
        O seu carrinho está vazio. <a href="catalog">Voltar ao catálogo</a>.
    </div>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Preço</th>
                    <th>Qtd</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cartItems)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@item.SubTotal.ToString("C")</td>
                        <td>
                            <button class="btn btn-danger btn-sm" @onclick="() => Remove(item.Product)">
                                🗑️
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold fs-5">Total:</td>
                    <td class="fw-bold fs-5 text-success">@CartService.GetTotal().ToString("C")</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a href="catalog" class="btn btn-outline-secondary">⬅ Continuar a Comprar</a>
        <button class="btn btn-success btn-lg" @onclick="Checkout">
            ✅ Finalizar Compra
        </button>
    </div>
}

@code {

    private List<CartItem> cartItems = new();

    protected override void OnInitialized()
    {
        cartItems = CartService.GetCartItems();
    }

    private void Remove(Product product)
    {
        CartService.RemoveFromCart(product);
        cartItems = CartService.GetCartItems();
    }

    private async Task Checkout()
    {

        if (!ApiService.IsLoggedIn)
        {
            Navigation.NavigateTo("/login");
            return;
        }


        var sucesso = await ApiService.CheckoutAsync(cartItems);

        if (sucesso)
        {
            CartService.ClearCart();

            Navigation.NavigateTo("/checkout-success");
        }
        else
        {
            Console.WriteLine("Erro ao finalizar compra.");
        }
    }
}