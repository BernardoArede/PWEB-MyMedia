@page "/availabilitymodes/edit"
@using Microsoft.EntityFrameworkCore
@using MyMedia.GestaoLoja.Entities
@inject IDbContextFactory<MyMedia.GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>AvailabilityMode</h2>
<hr />
@if (AvailabilityMode is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="AvailabilityMode" OnValidSubmit="UpdateAvailabilityMode" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="AvailabilityMode.Id" value="@AvailabilityMode.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="AvailabilityMode.Name" class="form-control" />
                    <ValidationMessage For="() => AvailabilityMode.Name" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/availabilitymodes">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private AvailabilityMode? AvailabilityMode { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        AvailabilityMode ??= await context.AvailabilityModes.FirstOrDefaultAsync(m => m.Id == Id);

        if (AvailabilityMode is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateAvailabilityMode()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(AvailabilityMode!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!AvailabilityModeExists(AvailabilityMode!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/availabilitymodes");
    }

    private bool AvailabilityModeExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.AvailabilityModes.Any(e => e.Id == id);
    }
}
