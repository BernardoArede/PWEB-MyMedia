@page "/availabilitymodes/delete"
@using Microsoft.EntityFrameworkCore
@using MyMedia.GestaoLoja.Entities
@inject IDbContextFactory<MyMedia.GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>AvailabilityMode</h2>
    <hr />
    @if (availabilitymode is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@availabilitymode.Name</dd>
        </dl>
        <EditForm method="post" Model="availabilitymode" OnValidSubmit="DeleteAvailabilityMode" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(availabilitymode is null)">Delete</button> |
            <a href="/availabilitymodes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private AvailabilityMode? availabilitymode;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        availabilitymode = await context.AvailabilityModes.FirstOrDefaultAsync(m => m.Id == Id);

        if (availabilitymode is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAvailabilityMode()
    {
        using var context = DbFactory.CreateDbContext();
        context.AvailabilityModes.Remove(availabilitymode!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/availabilitymodes");
    }
}
