@page "/availabilitymodes/create"
@using Microsoft.EntityFrameworkCore
@using MyMedia.GestaoLoja.Entities
@inject IDbContextFactory<MyMedia.GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>AvailabilityMode</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="AvailabilityMode" OnValidSubmit="AddAvailabilityMode" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="AvailabilityMode.Name" class="form-control" /> 
                <ValidationMessage For="() => AvailabilityMode.Name" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/availabilitymodes">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private AvailabilityMode AvailabilityMode { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAvailabilityMode()
    {
        using var context = DbFactory.CreateDbContext();
        context.AvailabilityModes.Add(AvailabilityMode);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/availabilitymodes");
    }
}
